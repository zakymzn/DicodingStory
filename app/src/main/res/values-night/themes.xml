<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DicodingStory" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryVariant">@color/light_teal</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/navy</item>
        <item name="colorSecondaryVariant">@color/light_navy</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your dark theme here. -->
        <item name="colorOnSurfaceVariant">@color/white</item>
    </style>

    <style name="Theme.DicodingStory" parent="Base.Theme.DicodingStory" />
</resources>